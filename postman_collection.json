                            "raw": "{{base_url}}/api/v1/tags/search?q=cyber&limit=5",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "tags",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "cyber"
                                },
                                {
                                    "key": "limit",
                                    "value": "5"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Tag Stats",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/tags/stats",
